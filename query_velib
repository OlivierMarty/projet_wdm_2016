<results>
  {
    for $res in /*:json/*:records/*:fields
      let $places := $res/*:available_bike_stands/text()
      return <result>
          <script>velib</script>
          <id>velib_{ $res/*:number/text() }</id>
          {
            if ($places > 2)
            then <status>ok</status>
            else (
                <status>problem</status>,
                <message>Station velib { lower-case($res/*:name/text()) } : plus que { $places } places disponibles !</message>
              )
          }
      </result>
  }
</results>
